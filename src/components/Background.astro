<div
  class="flex flex-col absolute items-center justify-center opacity-50 background"
>
</div>

<style>
  .background {
    font-family: "Bungee";
  }
</style>

<script>
  let words = "Tic Tac Toe";

  const { length: initialLength } = words;
  const variations = [];

  const firstChars = words
    .split(" ")
    .reduce((acc, word) => acc.add(word[0]), new Set());

  while (variations.length < initialLength) {
    const curr = words[0];
    words = words.substring(1, words.length);
    words += firstChars.has(curr) ? " " + curr : curr;

    if (words.at(-1) === " ") {
      words = words.trim();
    }

    let variation =
      words.length === initialLength
        ? `${words} ${words} ${words} ${words}`
        : `${words}${words}${words}${words}`;

    variations.push(variation);
  }

  const background = document.querySelector(".background");

  variations.forEach((variation, index) => {
    const span = document.createElement("span");
    span.innerText = variation;
    let shadow = "";
    for (let i = 0; i < 30; i++) {
      shadow += (shadow ? "," : "") + `-${i * 1}px ${i * 1}px 0 #d9d9d9`;
    }
    span.style.textShadow = shadow;

    let className =
      "text-clip whitespace-nowrap text-9xl tracking-wider py-2 cursor-default text-white";

    if (index % 2 === 0) {
      className += " animate-scroll-left";
    } else {
      className += " animate-scroll-right";
    }
    span.className = className;
    background?.appendChild(span);
  });
</script>
